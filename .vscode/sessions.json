{
    "$schema": "https://cdn.statically.io/gh/nguyenngoclongdev/cdn/main/schema/v10/terminal-keeper.json",
    "theme": "monokai",
    "active": "development",
    "activateOnStartup": true,
    "keepExistingTerminals": true,
    "sessions": {
        "development": [
            {
                "name": "üöÄ Server",
                "autoExecuteCommands": true,
                "icon": "server",
                "color": "terminal.ansiBlue",
                "commands": [
                    "npm run dev"
                ]
            },
            [
                {
                    "name": "üê≥ Docker: Infrastructure",
                    "autoExecuteCommands": true,
                    "icon": "docker",
                    "color": "terminal.ansiCyan",
                    "commands": [
                        "docker-compose up -d"
                    ]
                },
                {
                    "name": "üìä Monitoring",
                    "autoExecuteCommands": true,
                    "icon": "pulse",
                    "color": "terminal.ansiYellow",
                    "commands": [
                        "npm run monitor"
                    ]
                }
            ],
            [
                {
                    "name": "üß™ Tests",
                    "autoExecuteCommands": false,
                    "icon": "beaker",
                    "color": "terminal.ansiMagenta",
                    "commands": [
                        "npm test"
                    ]
                },
                {
                    "name": "üí≥ PayPal Webhook",
                    "autoExecuteCommands": false,
                    "icon": "credit-card",
                    "color": "terminal.ansiGreen",
                    "commands": [
                        "npm run webhook:paypal"
                    ]
                }
            ]
        ],
        "deployment": [
            {
                "name": "üö¢ Deploy",
                "autoExecuteCommands": false,
                "icon": "rocket",
                "color": "terminal.ansiRed",
                "commands": [
                    "npm run build",
                    "npm run deploy"
                ]
            },
            {
                "name": "üîç Logs",
                "autoExecuteCommands": false,
                "icon": "eye",
                "color": "terminal.ansiBlue",
                "commands": [
                    "npm run logs"
                ]
            }
        ]
    }
}